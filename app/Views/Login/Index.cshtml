@model Login
@{
    ViewData["Title"] = "Login Page";
    Layout = "_LoginLayout";
}

    <div class="row d-flex flex-column justify-content-center align-items-center">
        <div class="col-md-4">
            <div class="bg-secondary p-3 rounded-top border-bottom border-dark">
                <figure class="text-center">
                    <img src="@ViewBag.Logo" width="auto" height="60">
                </figure>
            </div>
            <div class="bg-light p-3 rounded-bottom">
                @if (ViewBag.Error != null) {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Error
                    </div>
                }
                <form asp-action="Login" asp-controller="Login">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" placeholder="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="submit" value="Find" class="btn btn-primary col col-12" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}